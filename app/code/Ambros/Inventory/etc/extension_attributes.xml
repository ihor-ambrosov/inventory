    <extension_attributes for="Magento\InventorySourceSelectionApi\Api\Data\InventoryRequestInterface">
        <attribute code="is_default" type="boolean" />
    </extension_attributes>
    <extension_attributes for="Magento\InventorySourceSelectionApi\Api\Data\ItemRequestInterface">
